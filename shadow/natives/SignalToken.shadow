locked class shadow:natives@
	SignalToken
{
	private readonly extern $signalFromSignalToken(Signaler instance, SignalToken token) => ();	
	
	get Signaler parent;
	get boolean shouldWait = true;

	public create(Signaler parent)
	{
		this:parent = parent;
		this:shouldWait = true;
	}
	
	public signal() => ()
	{
		$signalFromSignalToken(parent, this);
	}
	
	public invalidate() => (boolean)
	{
		if(shouldWait) {
